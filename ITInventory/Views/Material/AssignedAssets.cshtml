    .nav-link.active {
        background-color: #0d6efd !important;
        color: white !important;
    }

    .accordion-toggle {
        cursor: pointer;
    }

    .accordion-toggle:hover {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,.075);
    }
