@using System.Data
@{
    ViewData["Title"] = "Profile";
    var dt = ViewBag.data as DataTable;
}




<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        @await Html.PartialAsync("_Sidebar")


        <!-- Main content -->
        <div id="div" class="col-md-10">
            <div id="divcont" class="container mt-4">

                <h2>User Creation</h2>

                <!-- Date Filter Form -->
               
                    <div class="row mb-3">
                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <label>Profile Type</label>
                            <select class="form-control mandatory" name="Profile Type" id="Usertype">
                               <option value="0">Select</option>
                                <option value="Super Admin">Super Admin</option>
                               <option value="Admin">Admin</option>
                               <option value="General">General</option>
                           </select>

                        </div>
                    </div>
                        <div class="col-md-6 mb-2">
                            <div class="form-group">
                                <label>UserName</label>
                                <input type="text"
                                   name="UserName"
                                   class="form-control mandatory"
                                       placeholder="Enter UserName"
                                   id="UserName"
                                       
                                       autocomplete="off" />
                               
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                          
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text"
                                   name="Name"
                                       class="form-control "
                                       placeholder="Enter Name"
                                   id="Name"
                                       autocomplete="off" />
                               
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                           
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text"
                                   name="Email"
                                       class="form-control "
                                       placeholder="Enter Email"
                                       id="Email"
                                       autocomplete="off" />

                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            
                            <div class="form-group">
                                <label>Password</label>
                                <input type="text"
                                   name="Password"
                                   class="form-control mandatory"
                                       placeholder="Enter Password"
                                       id="Password"
                                       autocomplete="off" />

                            </div>
                        </div>
                       
                    </div>
                <button class="btn btn-primary" onclick="save()">Save</button>
               

                <table id="itemsTable" class="display table table-bordered">
                    <thead>
                        <th>Profile Type</th>
                        <th>User Name</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Action</th>
                    </thead>
                    <tbody id="tbody">

                    </tbody>
                    
                </table>

                
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <style>
        .datepicker {
            z-index: 1060 !important;
        }

        .input-group-text {
            cursor: pointer;
        }

            .input-group-text:hover {
                background-color: #e9ecef;
            }

        .datepicker table tr td.today {
            background-color: #FFF176 !important;
            border-color: #FFE082 !important;
        }

        .datepicker table tr td.active {
            background-color: #007bff !important;
            border-color: #0056b3 !important;
        }
    </style>
}

@section Scripts {
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   

    <script>

        $(document).ready(() => {
            Showdata();
        })
      
        function validation() {
            var msg = "";
            $(".mandatory").each(function () {
                if ($(this).val() == "" || $(this).val() == "0") {
                    var name = $(this).attr('name')

                    msg += "" + name + "  Required !! <br/>";
                }
            });
            return msg;
            
        }

        function sidebar() {
            $(".sidebar").hide();

        }

        function Showdata(){
            $.ajax({
                url: '/itinventory/Admin/ShowProfile',
                type: 'Get',
                data: {
                                    },
                success: (data) => {

                    var data = JSON.parse(data);
                    console.log(data);
                var row='';
                for(var e of data){
                    row+= `
                    <tr>
                            <td>${e.Usertype}</td>
                      <td>${e.Username}</td>
                    <td>${e.Name}</td>
                    <td>${e.Email}</td>
                    <td>${e.Password}</td>
                            <td align="center"><i class="fa fa-trash" onclick='Delete(${e.UserId})'></i></td>
             
                    </tr>
                    
                    `
                }
                    $("#tbody").append(row);   





                },
                error: (err) => {
                    alert(err);
                }



            });
        }
        function save() {
            var val = validation();
            if(val==""){

           
            $.ajax({
                    url: '/itinventory/Admin/SaveProfile',
                type: 'Post',
                data: {
                    UserId: $("#Hid_Id").val(),
                    Usertype: $("#Usertype").val(),
                    UserName: $("#UserName").val(),
                    Name: $("#Name").val(),
                    Email: $("#Email").val(),
                    Password: $("#Password").val(),
                   

                },
                success: (data) => {

                    var data = JSON.parse(data);

                    Swal.fire({
                        title: data[0].status,
                        html: data[0].Message,
                        icon: data[0].status.toLowerCase(), // Swal expects icon in lowercase: 'success', 'error', etc.
                        confirmButtonText: "OK"
                    }).then((result) => {
                        if (data[0].status === 'Success' && result.isConfirmed) {
                            window.location.reload();
                        }
                    });
                    console.log(data);





                },
                error: (err) => {
                    alert(err);
                }



            });
            }
            else{
                Swal.fire({
                    title: "OOPs!",
                    html: val,
                    icon: 'error', 
                    confirmButtonText: "OK"
                })
            }
        }

        function Delete(Id) {
            $.ajax({
                url: '/itinventory/Admin/DeleteProfile',
                type: 'Post',
                data: {
                    UserId: Id,
                    


                },
                success: (data) => {

                    var data = JSON.parse(data);
                 
                    Swal.fire({
                        title: data[0].status,
                        html: data[0].Message,
                        icon: data[0].status.toLowerCase(), // Swal expects icon in lowercase: 'success', 'error', etc.
                        confirmButtonText: "OK"
                    }).then((result) => {
                        if (data[0].status === 'Success' && result.isConfirmed) {
                            window.location.reload();
                        }
                    });
                    console.log(data);





                },
                error: (err) => {
                    alert(err);
                }



            });
        }

    </script>
}

